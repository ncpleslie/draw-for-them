{
  "name": "draw-for-them",
  "version": "0.0.6",
  "description": "Send your drawings to your friends",
  "homepage": "https://github.com/ncpleslie/draw-for-them",
  "bugs": {
    "email": "draw-for-me-issues@nickleslie.dev",
    "url": "https://github.com/ncpleslie/draw-for-them/issues"
  },
  "author": {
    "email": "draw-for-me@nickleslie.dev",
    "name": "ncpleslie",
    "url": "https://github.com/ncpleslie"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ncpleslie/draw-for-them.git"
  },
  "main": "dist/main.js",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron:start\"",
    "electron:start": "wait-on tcp:3000 && electron .",
    "electron:build": "yarn run build && electron-builder -c.extraMetadata.main=dist/main.js"
  },
  "build": {
    "extends": null,
    "appId": "dev.nickleslie.draw-for-them",
    "asar": true,
    "asarUnpack": "**/assets/*",
    "nodeGypRebuild": false,
    "files": [
      "build/**/*",
      "dist/**/*",
      "dist/assets/**/*",
      "node_modules/**/*",
      "packages.json",
      "assets/**/*"
    ],
    "extraFiles": [
      "assets"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "arm64"
          ]
        }
      ],
      "category": "Network",
      "artifactName": "${productName}_${version}.${ext}"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.1.1",
    "@fortawesome/free-solid-svg-icons": "6.1.1",
    "@fortawesome/react-fontawesome": "0.1.18",
    "@headlessui/react": "1.5.0",
    "axios": "0.26.1",
    "classnames": "2.3.1",
    "electron-is-dev": "2.0.0",
    "electron-updater": "5.0.1",
    "fabric": "github:ncpleslie/fabric.js",
    "fabricjs-react": "github:ncpleslie/fabricjs-react",
    "firebase": "9.6.11",
    "history": "5.3.0",
    "react": "18.0.0",
    "react-colorful": "5.5.1",
    "react-dom": "18.0.0",
    "react-router-dom": "6.3.0",
    "valtio": "1.5.2"
  },
  "devDependencies": {
    "@types/react": "17.0.43",
    "@types/react-dom": "17.0.14",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "@vitejs/plugin-react": "1.3.0",
    "autoprefixer": "^10.4.7",
    "concurrently": "7.2.0",
    "cross-env": "7.0.3",
    "electron": "18.2.3",
    "electron-builder": "23.0.3",
    "eslint": "8.12.0",
    "eslint-plugin-react": "7.29.4",
    "postcss": "8.4.13",
    "prettier": "2.6.1",
    "prettier-plugin-tailwindcss": "0.1.8",
    "tailwindcss": "3.0.24",
    "typescript": "4.6.3",
    "vite": "2.9.1",
    "wait-on": "6.0.1"
  }
}
